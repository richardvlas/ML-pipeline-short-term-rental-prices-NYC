name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Name for the input artifact stored at W&B
        type: str

      output_artifact:
        description: Name for the W&B artifact that will be created
        type: str

      output_type:
        description: Type for the output artifact
        type: str

      output_description:
        description: Description for the output artifact
        type: str

      min_price:
        description: Minimum value for price
        type: float

      max_price:
        description: Maximum value for price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  \
                       --output_artifact {output_artifact}  \
                       --output_type {output_type} \
                       --output_description {output_description} \
                       --min_price {min_price} \
                       --max_price {max_price} 
